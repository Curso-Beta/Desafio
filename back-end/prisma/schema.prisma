datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       String @id @default(uuid())
  email    String @unique
  password String
  name     String
  role     Role   @default(USER)

  @@map("users")
}

model Course {
  id          String @id @default(uuid())
  name        String @unique
  description String
  category    String
  url         String

  @@map("courses")
}

enum Category {
  DIREITO
  PERICIA_JUDICIAL
  DESENVOLVIMENTO_PESSOAL
  GESTAO_DE_PESSOAS
  CALCULOS
  OTHER
}

enum Role {
  USER
  ADMIN
}
